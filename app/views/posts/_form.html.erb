<div class="container">
  <div class="main posts-form">
    
    <%= form_with(model: @post, local: true ,url: choose_new_or_edit ) do |form| %>

      <% if @post.errors.any? %>
        <div id="error_explanation">
          <!--<h2><%= @post.errors.count %>件のエラーがあります。</h2>-->
            <ul>
              <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
        <% end %>
        
        <form >
          <div class="form-group">                        <!--画像追加-->
            <%= form.label :写真を選択してください %>     <!--画像追加-->
            <div class="col-md-offset-3 col-md-6">
            <%= form.file_field :image, id: :post_image,class:"form-control" %>       <!--画像追加-->
            </div>
            <%= form.hidden_field :image_cache %>                                     <!--画像追加-->
          </div><!--追加-->
          
          <div class="form-group">
            <%= form.label :コメントを書く%>
            <div class="col-md-offset-3 col-md-6">
            <%= form.text_field :content,class:"form-control" %>
            </div>
          </div>
            <p><%= form.submit"Post",class: 'btn btn-success btn-sm' %></P>
            <% end %>
        </form>
          <p><%= link_to "Back", posts_path,class: 'btn btn-warning btn-sm' %></p>
        </div>
      </div>


